<div class="main__page-title-container">
    <h2 class="main__page-title">S'identifier</h2>
</div>

<section class="main__content user__login">
    <form action="/login" method="POST" class="user__form">
        <fieldset class="user__field">
            <label for="name">Pseudo&#8239;: </label>
            <input type="text" name="name" min="3" id="name" placeholder="Fanfan la Tulipe" />
        </fieldset>

        <fieldset class="user__field">
            <label for="email">Email&#8239;:</label>
        <input type="email" name="email" id="email" placeholder="fanfan@latulipe.fr" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}$" />
        </fieldset>

        <fieldset class="user__field">
            <label for="password">Mot de passe&#8239;: </label>
            <input type="text" min="3" name="password" id="password" />
        </fieldset>
        
        <div class="user__submit">
            <button type="submit" value="Soumettre" class="button button--accent">soumettre</button>
        </div>
    </form>          
</section>
