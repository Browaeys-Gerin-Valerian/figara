    <ul class="choices__list">

        <li class="choices__entry">
            <label for="<%= quizz.C1.label %>" class="custom-checkbox custom-checkbox--with-label">
                <input type="checkbox" id="<%= quizz.C1.label %>" name="<%= quizz.C1.label %>" class="" value="<%= quizz.C1.label %>">
                <span class="custom-checkbox--marker"></span>
                <span class="custom-checkbox__label">
                    <%= quizz.C1.label %>
                </span>
            </label>
        </li>

        <li class="choices__entry">
