                    <th class="thead__nb-articles">Nb. articles associés</th>
                </tr>
            </thead>
            <tbody>

                <% for (const { _id, name } of categories) { %> 
                    <tr>
                        <td class="tbody__parent-cat" id="category-<%= _id %>"><%= name %></td>
                        <td class="tbody__nb-articles">2</td>
                    </tr>
                <% } %> 

            </tbody>
        </table>

